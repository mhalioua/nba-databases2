<% content_for :title, 'Filter' %>
<style>
  .class {
    display: none;
  }

  .class1 {
    display: block;
  }
</style>
<%= @game_start_index %>
<%= @game_end_index %>
<%= form_tag("/filter/filter", method: "get") do %>
  <label>Home Team: </label>
  <select name="home_team_id">
    <option value="0" <%= @home_team_id == 0 ? "selected" : '' %>>All</option>
    <% @teams.each do |team| %>
      <option value="<%= team.id %>" <%= @home_team_id == team.id ? "selected" : '' %>><%= team.team %></option>
    <% end %>
  </select>

  <label>Away Team: </label>
  <select name="away_team_id">
    <option value="0" <%= @away_team_id == 0 ? "selected" : '' %>>All</option>
    <% @teams.each do |team| %>
      <option value="<%= team.id %>" <%= @away_team_id == team.id ? "selected" : '' %>><%= team.team %></option>
    <% end %>
  </select>


  <input type="checkbox" name="datePicker" id="datePicker" <%= @datePicker ? "checked" : "" %> />
  <label for="datePicker">All dates</label>

  <input type="text" data-toggle="daterangepicker" name="date" data-filter-type="date-range"
         style="width: 400px; text-align:center; margin: 20px; display: <%= @datePicker ? "none" : "block" %>"
         class="daterange"
  >

  <input type="submit" value="Filter">
<% end %>
<script>
    $('#datePicker').change(function () {
        var value = this.checked;
        if (value) {
            $(".daterange").css("display", "none");
        } else {
            $(".daterange").css("display", "block");
        }
    });
</script>
<div style="display: flex;">
  <% (1..((@games.length + 9)/10).to_i).each do |index| %>
    <button class="btn-primary apply apply<%= index %>"><%= "#{index * 10 - 9} - #{index * 10 < @games.length ? index * 10 : @games.length}" %></button>
  <% end %>
</div>
<% @games.each_with_index do |game, index| %>
  <div style="border-bottom: 20px solid black;" class="class class<%= (index/10).to_i + 1 %>">
    <img style="border-radius: 0;" src="https://s3.amazonaws.com/nba-daemon/images/<%= game.game_id %>.png" />
  </div>
<% end %>

