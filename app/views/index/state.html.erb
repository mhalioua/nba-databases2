<div style="display:none" class="boxes box<%= player.id %>">
            <table border="1">
                <thead>
                  <tr>
                    <th>GameID</th>
                    <th>MIN</th>
                    <th>FGA</th>
                    <th>FTA</th>
                    <th>TO</th>
                    <th>OR</th>
                    <th>STL</th>
                    <th>BLK</th>
